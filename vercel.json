{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://unionhub.website/api",
    "JWT_SECRET": "your-super-secret-jwt-key-change-this-in-production",
    "ADMIN_EMAIL": "kamolbekobloberdiyev1@gmail.com",
    "CORS_ORIGIN": "https://unionhub.website"
  },
  "functions": {
    "server/index.js": {
      "maxDuration": 10
    }
  }
}